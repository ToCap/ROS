<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="ev3_robot">

  <!-- === Base link === -->
  <link name="base_link">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.1 0.1 0.05"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- === Gyro sensor link === -->
  <link name="gyro_link">
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.015" length="0.03"/>
      </geometry>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.015" length="0.03"/>
      </geometry>
    </collision>
  </link>

  <!-- === Fixed joint from base to gyro === -->
  <joint name="gyro_joint" type="fixed">
    <parent link="base_link"/>
    <child link="gyro_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- === ROS2 Control Hardware Interface === -->
  <transmission name="gyro_transmission">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="gyro_joint"/>
    <hardwareInterface>hardware_interface/StateInterface</hardwareInterface>
  </transmission>

</robot>
